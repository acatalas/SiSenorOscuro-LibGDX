<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/v_padding"
    android:paddingLeft="@dimen/h_padding"
    android:paddingTop="@dimen/v_padding"
    android:paddingEnd="@dimen/v_padding"
    android:paddingRight="@dimen/h_padding"
    android:paddingBottom="@dimen/v_padding">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/v_padding"
        android:fontFamily="@font/greatvibes"
        android:text="@string/groups_title"
        android:textColor="@android:color/black"
        android:textSize="@dimen/title_text" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_group_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" />
</LinearLayout>